<UserControl x:Class="FarAway2._0.Content.Controls.UserControls.DataEdit.RolesEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FarAway2._0.Content.Controls.UserControls.DataEdit"
             ui:ThemeManager.RequestedTheme="Light"
            Height="140"
            Width="200"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
    <Grid>
        <ui:SimpleStackPanel Orientation="Vertical"
                             Spacing="30"
                             VerticalAlignment="Stretch"
                             HorizontalAlignment="Stretch"
                             Margin="5">
            <TextBox ui:ControlHelper.Header="Название роли"
                     ui:ControlHelper.PlaceholderText="Менеджер по клиентам"
                     Name="StatusName" />
            <Button Name="SaveChanges"
                    Click="SaveChanges_Click"
                    Content="Сохранить"
                    HorizontalAlignment="Center" />
        </ui:SimpleStackPanel>
    </Grid>
</UserControl>
