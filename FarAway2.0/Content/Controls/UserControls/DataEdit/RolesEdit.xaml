<UserControl x:Class="FarAway2._0.Content.Controls.UserControls.DataEdit.RolesEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             Style="{StaticResource DataEditUserControl}"
             Height="190"
             Width="270">
    <Grid>
        <ui:SimpleStackPanel Style="{StaticResource DataEditSimpleStackPanel}">
            <TextBox ui:ControlHelper.Header="Название роли"
                     ui:ControlHelper.PlaceholderText="Менеджер по клиентам"
                     Name="RoleName" />
            <Button Name="SaveChanges"
                    Click="SaveChanges_Click"
                    Content="Сохранить"
                    HorizontalAlignment="Center" />
            <Button Name="Exit"
                    Click="Exit_Click"
                    Content="Отмена"
                    HorizontalAlignment="Center"
                    Background="Transparent" />
        </ui:SimpleStackPanel>
    </Grid>
</UserControl>
