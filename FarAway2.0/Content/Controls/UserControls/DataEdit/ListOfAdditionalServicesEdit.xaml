<UserControl x:Class="FarAway2._0.Content.Controls.UserControls.DataEdit.ListOfAdditionalServicesEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             Style="{StaticResource DataEditUserControl}"
             Height="350"
             Width="270">
    <Grid>
        <ui:SimpleStackPanel Style="{StaticResource DataEditSimpleStackPanel}">
            <TextBox ui:ControlHelper.Header="Название услуги"
                     ui:ControlHelper.PlaceholderText="Мойка"
                     Name="ServiceName" />
            <TextBox ui:ControlHelper.Header="Цена услуги"
                     ui:ControlHelper.PlaceholderText="199.99"
                     Name="ServicePrice" />
            <TextBox ui:ControlHelper.Header="Описание услуги"
                     ui:ControlHelper.PlaceholderText="Представляет собой мойку автомобиля клиента"
                     Name="SeviceDescription" />
            <Button Name="SaveChanges"
                    Click="SaveChanges_Click"
                    Content="Сохранить"
                    HorizontalAlignment="Center" />
            <Button Name="Exit"
                    Click="Exit_Click"
                    Content="Отмена"
                    HorizontalAlignment="Center"
                    Background="Transparent" />
        </ui:SimpleStackPanel>
    </Grid>
</UserControl>
