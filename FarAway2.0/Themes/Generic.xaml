<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:FarAway2._0.Content.Controls">


    <Style TargetType="{x:Type local:PhotoSelector}">
        <Setter Property="Template">
            <Setter.Value>

                <ControlTemplate TargetType="{x:Type local:PhotoSelector}">

                    <Button Padding="0"
                            FontSize="{TemplateBinding TextSize}"
                            Background="#20BEBEBE"
                            x:Name="ChooseImageButton"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Style="{x:Null}"/>

                </ControlTemplate>

            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
